<Window x:Class="SecurityBlackoutWindowTestWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <CheckBox Name="chkUseFullDesktop" Content="Use Full Desktop" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="False" />
        <Button Name="btnShowDialog" Content="Test" Grid.Row="1" Width="200" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnShowDialog_Click" />
    </Grid>
</Window>
